// Digital Product model - FUGA SCORE integration
// Represents individual products (singles, EPs, albums, focus tracks) for distribution
model DigitalProduct {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  submissionId    String   @db.ObjectId
  submission      Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  // Product identification
  upc             String
  format          ProductFormat
  title           String
  artistName      String

  // Linked track (for focus tracks)
  linkedTrackId   String?
  trackIndex      Int?    // Position in album

  // Release information
  releaseDate     DateTime
  territories     String[]

  // Status tracking
  status          SubmissionStatus @default(PENDING)
  submittedAt     DateTime?
  approvedAt      DateTime?

  // Marketing integration
  marketingDriverIds String[] // References to MarketingDriver.id

  // Relations
  featureReport   FeatureReport?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([submissionId])
  @@index([upc])
  @@index([status])
  @@index([releaseDate])
  @@fulltext([title, artistName])
}

enum ProductFormat {
  SINGLE
  EP
  ALBUM
  FOCUS_TRACK
}

// Feature Report model - Performance tracking
model FeatureReport {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  digitalProductId      String   @unique @db.ObjectId
  digitalProduct        DigitalProduct @relation(fields: [digitalProductId], references: [id], onDelete: Cascade)

  upc                   String   @unique

  // Auto-detected placements (from FUGA API or scraping)
  autoPlaylists         PlaylistPlacement[]

  // Admin-entered placements
  adminPlaylists        AdminPlaylistPlacement[]

  // Analytics
  lastUpdated           DateTime @default(now())
  reportStatus          ReportStatus @default(NEW)

  // Metadata
  genres                String[]
  moods                 String[]

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@index([reportStatus])
  @@index([lastUpdated])
}


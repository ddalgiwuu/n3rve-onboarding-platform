  translations  ArtistTranslation[]
  identifiers   ArtistIdentifier[]

  // FUGA Artist Roster fields
  fugaArtistId  String?  @unique
  status        ArtistStatus @default(DRAFT)

  // Geographic data
  country       String?
  currentCity   String?
  hometown      String?

  // Biography & Marketing
  bio           String?  @db.String
  gender        ArtistGender?
  similarArtists String[] // Artist names
  socialMovements String?
  syncHistory   String?
  syncHistoryDetails String?

  // Media assets
  pressPhotosUrl    String?  // Dropbox link to press shots
  pressPhotoCredits String?
  artistAvatarUrl   String?  // 1x1 ratio
  artistBannerUrl   String?  // 3x2 ratio
  artistLogoUrl     String?  // 1x1 ratio for logo

  // DSP & Social profiles
  dspProfiles       DspProfile[]
  socialProfiles    SocialProfile[]

  // Validation
  missingFields     String[] // List of incomplete required fields
  completionScore   Int      @default(0) // 0-100%

  // Analytics
  releaseCount      Int      @default(0)
  lastReleaseDate   DateTime?
  totalStreams      Int?

  // Usage tracking
  createdAt     DateTime @default(now())
  lastUsed      DateTime @default(now())
  usageCount    Int      @default(1)
  updatedAt     DateTime? @updatedAt

  @@index([userId, name])
  @@index([userId, lastUsed])
  @@index([status])
  @@fulltext([name])
